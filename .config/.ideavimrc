set surround
set multiple-cursors
set commentary


" Set leader to space
let mapleader = '<space>'

"split navigations
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

set history=1000
set undolevels=1000
set wildignore=*.swp,*.bak,*.pyc,*.class

nnoremap ; :
nmap <silent> ,/ :nohlsearch<CR>

au BufNewFile,BufRead *.py
    \ set tabstop=4      |
    \ set softtabstop=4  |
    \ set shiftwidth=4   |
    \ set textwidth=88   |
    \ set expandtab      |
    \ set autoindent     |
    \ set fileformat=unix

au BufNewFile,BufRead *.js, *.html, *.css
    \ set tabstop=2     |
    \ set softtabstop=2 |
    \ set shiftwidth=2
